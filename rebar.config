{erl_opts, [debug_info]}.

{deps, [
    {jsone,  "1.6.1"},
    {cowboy, "2.9.0"},
    {hackney, "1.18.1"}
]}.

{shell, [
    {apps, [reply_hello]}
]}.

{relx, [{release, {reply_hello, "1.0.0"}, [reply_hello]},
        {vm_args, "config/vm.args"},
        {sys_config, "config/sys.config"},
        {dev_mode, true},
        {include_erts, false},
        {extended_start_script, true}
    ]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true},
                            {include_src, false}]}]}
           ]}.

{erlfmt, [
            write,
            {files, "{src,test}/*.{erl}"}
        ]}.

{plugins, [erlfmt]}.